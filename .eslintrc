{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/flowtype"
  ],
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "prettier"
  ],
  "rules": {
    "no-console": 0,
    "yoda": 0,
    "prettier/prettier": ["error", {
      "printWidth": 100,
      "singleQuote": true
    }],
    "comma-dangle": ["error", "never"],
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": [
        'webpack.config.js',
        'webpack.*.config.js',
        "test/**"
      ],
      optionalDependencies: false
    }],
    "class-methods-use-this": 0
  }
}
